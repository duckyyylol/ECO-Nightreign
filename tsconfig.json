{
    "compilerOptions": {
        "removeComments": true,
        "preserveConstEnums": true,
        "strictFunctionTypes": false,
        "sourceMap": true,
        "allowJs": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2021",
        "downlevelIteration": true,
        "lib": ["ES2021"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules/**/*"]
}
